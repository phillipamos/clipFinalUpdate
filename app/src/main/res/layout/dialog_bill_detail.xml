<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/bill_detail">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#ff167688"
        android:id="@+id/bill_detail_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Bill Status"
            android:id="@+id/textView_billStatus"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffffff" />

    </RelativeLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mark as paid"
        android:id="@+id/checkBoxPaid"
        android:checked="false"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/button_visitSite"
        android:layout_alignStart="@+id/button_visitSite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visit Site"
        android:id="@+id/button_visitSite"
        android:layout_marginEnd="38dp"
        android:layout_alignBaseline="@+id/button_deleteBill"
        android:layout_alignBottom="@+id/button_deleteBill"
        android:layout_toStartOf="@+id/button_deleteBill" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Bill"
        android:id="@+id/button_deleteBill"
        android:layout_marginRight="92dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="90dp"
        android:layout_below="@+id/bill_detail_layout"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
