<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:http="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#ff167688"
        android:id="@+id/stocksLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Add Stocks/Securities"
            android:id="@+id/textViewStocks"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffffff" />

    </RelativeLayout>
    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/editText_brokerage"
        android:hint="Brokerage account deposit"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/imageButton_AddStock"
        android:layout_alignStart="@+id/editText_stockValue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SYMBOL"
        android:id="@+id/textView10"
        android:layout_marginTop="25dp"
        android:layout_marginStart="36dp"
        android:layout_below="@+id/stocksLayout"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_symbol"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_stockValue"
        android:layout_below="@+id/editText_symbol"
        android:layout_alignStart="@+id/editText_symbol"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Market Value"
        android:id="@+id/textView_MarketValue"
        android:layout_below="@+id/editText_symbol"
        android:layout_alignStart="@+id/editText_stockValue" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_AddStock"
        android:src="@drawable/ic_action_new_small"
        android:layout_below="@+id/editText_stockValue"
        android:layout_alignStart="@+id/editText_brokerage"
        android:layout_alignEnd="@+id/button_addBrokerage" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_addBrokerage"
        android:src="@drawable/ic_action_new_small"
        android:layout_below="@+id/editText_brokerage"
        android:layout_alignStart="@+id/editText_brokerage" />

</RelativeLayout>
