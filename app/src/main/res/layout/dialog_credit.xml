<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:http="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#ff167688"
        android:id="@+id/cashLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Add Credit Accounts"
            android:id="@+id/textView9"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffffff" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Card Issuer (Chase, Wells Fargo etc.)"
        android:id="@+id/textView10"
        android:layout_marginTop="23dp"
        android:layout_alignStart="@+id/editText_cardIssuer"
        android:layout_below="@+id/cashLayout" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_cardIssuer"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="39dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_stockValue"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/textView12"
        android:layout_alignStart="@+id/textView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Outstanding Balance"
        android:id="@+id/textView12"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/editText_cardIssuer"
        android:layout_alignStart="@+id/editText_cardIssuer" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_addCredit"
        android:src="@drawable/ic_action_new_small"
        android:layout_below="@+id/editText_cardWebSite"
        android:layout_alignStart="@+id/editText_cardWebSite"
        android:layout_marginTop="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Web Address:"
        android:id="@+id/textView_webAdd"
        android:layout_below="@+id/editText_stockValue"
        android:layout_alignStart="@+id/editText_stockValue" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_cardWebSite"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/textView_webAdd"
        android:layout_alignStart="@+id/textView_webAdd" />

</RelativeLayout>
