<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_wallpaper">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/textView_welcome"
        android:textSize = "50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:id="@+id/textView_setup"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView_welcome"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Express setup"
        android:id="@+id/button_express"
        android:layout_marginBottom="109dp"

        android:layout_above="@+id/button_custom"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom setup"
        android:id="@+id/button_custom"
        android:layout_marginBottom="95dp"

        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button_express" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="No accounts to add?"
        android:id="@+id/textView_noAccounts"
        android:textColor="#ffffffff"

        android:layout_above="@+id/button_express"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Add your accounts!"
        android:id="@+id/textView_customAccounts"
        android:textColor="#ffffffff"

        android:layout_above="@+id/button_custom"
        android:layout_centerHorizontal="true" />

</RelativeLayout>