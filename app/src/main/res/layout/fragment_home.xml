<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"

        android:id="@+id/quickLinksLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="220dp"
            android:layout_height="64dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Quick CLIP"
            android:id="@+id/textView_quickLinks"
            android:textColor="#ff167688"
            android:textIsSelectable="false"
            android:textSize="40sp"
            android:layout_marginStart="43dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="19dp" />
    </RelativeLayout>
        <!-- A CardView that contains a TextView -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_AddContacts"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            card_view:cardCornerRadius="0dp"
            android:background="#ff646464"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="3dp"
            card_view:cardElevation ="10dp">
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/card_view"
                android:layout_alignParentStart="true"
                android:background="#ff167688"
                android:weightSum="1"
                android:focusable="false"
                android:clickable="true"
                android:id="@+id/add_contact">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Add Contact"
                    android:id="@+id/textViewAsset"

                    android:textSize="20sp"
                    android:textColor="#ffffffff"
                    android:layout_marginStart="17dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageButton_plus" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageButton_plus"
                    android:src="@android:drawable/ic_menu_add"
                    android:background="@null"
                    android:layout_marginStart="35dp"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>




        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_AddStocks"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:background="#ff646464"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="false"
            android:layout_marginTop="175dp"
            android:layout_marginBottom="7dp"
            android:visibility="visible"
            android:layout_alignParentEnd="false"
            card_view:cardElevation ="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff167688"
                android:id="@+id/layout_addstocks"
                android:clickable="true">

                <ImageView
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:id="@+id/imageButton"
                   android:src="@android:drawable/ic_menu_add"
                   android:background="@null"
                   android:layout_marginStart="35dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Add Stocks"
                    android:id="@+id/textView4"
                    android:textSize="20sp"
                    android:textColor="#ffffffff"
                    android:layout_marginStart="17dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageButton" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_AddCalories"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            card_view:cardCornerRadius="0dp"
            android:background="#ff167688"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="false"
            android:layout_marginTop="230dp"
            android:layout_marginBottom="5dp"
            android:visibility="visible"
            android:layout_alignParentEnd="false"
            card_view:cardElevation ="10dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:background="#ff167688">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageButton2"
                    android:src="@android:drawable/ic_menu_add"
                    android:background="@null"
                    android:layout_marginStart="35dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Quick Add Calories"
                    android:id="@+id/textView5"
                    android:textSize="20dp"
                    android:textColor="#ffffffff"
                    android:layout_marginStart="17dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageButton2" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Current Market Info"
            android:id="@+id/textView6"
            android:layout_above="@+id/card_view_WebView"
            android:layout_alignParentStart="true" />

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_WebView"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            card_view:cardCornerRadius="8dp"
            android:visibility="visible"
            card_view:cardElevation ="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true">






        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/stockTicker_WebView"

            >
            <WebView
                android:id="@+id/stockTicker_WebView"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true">
            </WebView>
            </RelativeLayout>
        </android.support.v7.widget.CardView>


</RelativeLayout>