<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_assets"
    android:layout_width="fill_parent"
    android:layout_height="150dp"
    card_view:cardCornerRadius="4dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="0dp"
    card_view:cardElevation="5dp"
    android:clickable="true">

<RelativeLayout
    android:id="@+id/card_View_assets_Background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name_of_asset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:gravity="center_vertical"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content"
        android:gravity="center_vertical"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="8dp"
        android:layout_alignBottom="@+id/name_of_asset"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#67646464"
        android:layout_below="@+id/name_of_asset"
        android:layout_alignParentStart="true">

    </LinearLayout>

</RelativeLayout>

</android.support.v7.widget.CardView>